<%= form_for @link do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 30, :rows => 10 %>
  </p>
  <p>
    <%= f.label :tag_list %>: <%= f.text_field :tag_list, :size => 60 %>
  </p>
  
  <p><%= f.submit %></p>
<% end %>
